{
  "name": "kkb-extension",
  "version": "1.0",
  "description": "Build an Extension!",
  "manifest_version": 2,
  // 新增popup弹框
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html",
    // "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "js": ["contentscript.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "tabs"
  ],
  "web_accessible_resources": [
    "script.js",
    "aes-decryptor.js",
    "mux-mp4.js",
    "m3u8.js"
  ],
  "content_security_policy": "style-src 'self' 'unsafe-inline';script-src 'self' 'unsafe-eval' https://cdn.bootcss.com; object-src 'self' ;"
}
