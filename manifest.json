{
  "name": "kkb-extension",
  "version": "1.0",
  "description": "Build an Extension!",
  "manifest_version": 2,
  // 新增popup弹框
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    // "page": "background.html",
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": ["<all_urls>", "webRequest", "webRequestBlocking"],
  "web_accessible_resources": ["script.js"]
}
